.chat-side
 .chat-side__user
  .chat-side__user__name 
   = current_user.name
  .chat-side__user__new-group
   = link_to new_group_path do
    =fa_icon "pencil-square-o", class: "icon"
  .chat-side__user__edit-user
   = link_to edit_user_path(current_user.id) do
    =fa_icon "cog", class: "icon"

 .chat-side__groups
  %ul.chat-side__groups-list
   -current_user.groups.each do |group|
    = link_to groups_path(group) do
     %li.chat-side__groups-list__name
      = group.name
     %li.chat-side__groups-list__message
      まだメッセージはありません
   
.chat-main
 .chat-main__header
 -current_user.groups.each do |group|
  .chat-main__header__group--edit--btn 
   = link_to "Edit", edit_group_path(group)
  .chat-main__header__group
   .chat-main__header__group__name 
    = group.name
   .chat-main__header__group__members MEMBER 

 %ul.chat-main__body
  %li.chat-main__body__message-name user_name
  %li.chat-main__body__message-date 2017/1/8 20:35:17
  %li.chat-main__body__message-body こんにちは
  %li.chat-main__body__message-name user_name2
  %li.chat-main__body__message-date 2017/1/8 20:37:17
  %li.chat-main__body__message-body こんにちは
  
 .chat-main__footer
  .chat-main__footer__form
   .chat-main__footer__form__form--send--btn Send
   .chat-main__footer__form__picture
    .i.fa.fa-picture-o 
   %input.chat-main__footer__form__input-form{ type: "text", placeholder:"type a message"}
