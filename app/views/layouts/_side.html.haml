.chat-side
 .chat-side__user
  .chat-side__user__name 
   = current_user.name
  .chat-side__user__new-group
   = link_to new_group_path do
    =fa_icon "pencil-square-o", class: "icon"
  .chat-side__user__edit-user
   = link_to edit_user_path(current_user.id) do
    =fa_icon "cog", class: "icon"

 .chat-side__groups
  %ul.chat-side__groups-list
   -current_user.groups.each do |group|
    = link_to group_messages_path(group) do
     %li.chat-side__groups-list__name
      = group.name
     %li.chat-side__groups-list__message
      = group.show_last_message
   
